{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Home {% endblock %}

{% block stylesheets %}
    <!-- Uso o parent() para mostrar as informações do template/bloco pai também -->
    {{ parent() }}
    <!-- Novo Css -->
{% endblock %}

{% block body %}

<h1>{{ title|upper }}</h1>
<p>Bem-Vindo a nosso site</p>

<div class="container">
    <ul>
    {# Laço For. Foreach não funciona aqui no TWIG #}
        {% for user in users %}
            <li>
                {% if user.name == 'Tiago Cavalo' %}
                    >>
                {% endif %}

                Nome: {{ user.name }} - CEP: {{ user.cep }}
            </li>
        {% endfor %}
    </ul>
</div>

{% endblock %}